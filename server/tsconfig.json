{
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "target": "es2022",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "node_modules/@types",
            "types"
        ],
        "strictNullChecks": true,
        "types": []
    },
    "include": [
        "src"
    ],
    "exclude": [
        "dist"
    ]
}